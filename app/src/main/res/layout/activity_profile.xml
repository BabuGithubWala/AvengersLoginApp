<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/tony_stark_new"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:layout_toRightOf="@+id/imgTonyStark"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tony@starkindustries.com"
        android:layout_toRightOf="@+id/imgTonyStark"
        android:layout_below="@+id/txtName"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 9176357534"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtEmail"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:textSize="18sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Information"
        android:background="#1565c0"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_below="@+id/imgTonyStark"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Exit App"
        android:background="#ff1744"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp" />
    
</RelativeLayout>